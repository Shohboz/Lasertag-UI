<% if activity.parameters && activity.parameters[:composite_key] %>
	<i class="fa fa-link fa-fw"></i>
	<% if activity.parameters[:composite_key].split(',').length == 2 %>
	<% sub = Subscription.find(activity.parameters[:composite_key]) %>
		Subscription <%= link_to sub.id, sub %> was added
	<% else %>
		Activity <%= "##{activity.id}" %> was added
	<% end %>
<% else %>
	<i class="fa fa-fw fa-unlink"></i>
	Subscription has been removed
<% end %>