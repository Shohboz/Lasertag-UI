<% if activity.parameters && activity.parameters[:composite_key] %>
	<i class="fa fa-refresh fa-fw fa"></i>
	<% comp = activity.parameters[:composite_key].split(',')
	if comp.length == 2
		if sub = Subscription.where(game_id: comp[0], player_id: comp[1]).first %>
			Subscription <%= link_to sub.id, sub %> was updated
		<% else %>
			Subscription has been removed
		<% end %>
	<% else %>
		Activity <%= "##{activity.id}" %> was added
	<% end %>
<% else %>
	<i class="fa fa-fw fa-unlink"></i>
	Subscription has been removed
<% end %>