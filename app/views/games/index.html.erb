<% breadcrumb :games, @games %>

<p id="notice"><%= flash_messages %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-flag fa-fw"></i> Список игр</h3>
  </div>
  <div class="panel-body">
    <ul style="padding-left: 0px;">

      <%= render @games %>

    </ul>

    <div class="btn-group">
      <%= link_to new_game_path, class: "btn" do %>
        <i class="fa fa-fw fa-user-plus"></i>
        <span>New Game</span>
      <% end %>
    </div>

  </div>
</div>
