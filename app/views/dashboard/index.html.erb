<% breadcrumb :root %>

<p id="notice"><%= flash_messages %></p>

<div class="row">
	<div class="col-lg-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Activity Panel</h3>
			</div>
			<div class="panel-body">
		    	<ul style="padding-left: 0px;">

				<%= render partial: "public_activity/activities/activity", collection: @activities  %>

				</ul>
				<div class="text-right">
					<%= link_to activities_path do %>
    					View All Activity <i class="fa fa-arrow-circle-right"></i>
  					<% end %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="col-lg-4">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title"><i class="fa fa-male fa-fw"></i> Recent Players</h3>
		  	</div>
		  	<div class="panel-body">
		    	<ul style="padding-left: 0px;">

				<%= render partial: "players/player", collection: @players  %>

				</ul>
			</div>
		</div>
	</div>

	<div class="col-lg-4">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title"><i class="fa fa-gamepad fa-fw"></i> Recent Games</h3>
		  	</div>
		  	<div class="panel-body">
		    	<ul style="padding-left: 0px;">

				<%= render partial: "games/game", collection: @games  %>

				</ul>
			</div>
		</div>
	</div>
</div>
<!-- /.row -->